<p id="notice"><%= notice %></p>

<table class="stockCreation" width=300 height=100>
  <tr>
    <td>
      <p>
      <strong>Name:</strong>
      <%= @stock.name %>
      </p>
    </td>
    <td>
      <p>
      <strong>Unit</strong>
        <% unless @stock.unit.nil?%>
            <%= @stock.unit.name %>
        <%end%>
      </p>
    </td>
    <td>
      <p>
      <strong>Info:</strong>
      <%= @stock.info %>
      </p>
    </td>
    <td>
      <p>
        <strong>City</strong>
        <%= @stock.city %>
      </p>
    </td>
    <td>
      <p>
        <strong>Street</strong>
        <%= @stock.street %>
      </p>
    </td>
  </tr>
</table>

<%= link_to 'Back', stocks_path, class:'btn btn-primary' %>
<%= link_to 'Edit', edit_stock_path(@stock), class:'btn btn-warning' %>

